@model FridgeForUpdateDto

@{
    ViewData["Title"] = "Fridges";
}

<div>
    <h3>Fridge Update</h3>

    <form class="creation-form" method="post" asp-action="Update">
        <div class="field-container">
            <label asp-for="Id"></label>
            <input asp-for="Id"/>
        </div>

        <div class="field-container">
            <label asp-for="Name"></label>
            <div>
                <input asp-for="Name"/>
                <span class="error-mes-span" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="OwnerName">Owner Name</label>
            <input asp-for="OwnerName"/>
        </div>

        <div class="field-container">
            <label asp-for="ModelId">Model Id</label>
            <input asp-for="ModelId"/>
        </div>

        <div class="action-btn-container">
            <button class="action-btn" type="submit" onclick="alert('Update request sent')">Update</button>
            <a class="back-btn" href="/Home/Index">Back</a>
        </div>
    </form>

    @if (ViewData["Message"] != null)
    {
        <h5>@ViewData["Message"]</h5>
    }
</div>