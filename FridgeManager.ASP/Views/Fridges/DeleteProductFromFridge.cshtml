@{
    ViewData["Title"] = "Fridges";
}

<div>
    <h3>Removing Product From Fridge</h3>

    <form class="getting-form" asp-action="DeleteProductFromFridge" method="post">
        <label>Fridge Product Id:</label>
        <input class="del-text" type="text" name="id"/>
        <br />
        <div class="action-btn-container">
            <button class="action-btn del-btn" type="submit" onclick="confirmRemoving()">Delete</button>
            <a class="back-btn" href="/Home/Index">Back</a>
        </div>
    </form>  

    @if (ViewData["Message"] != null)
    {
        <h5>@ViewData["Message"]</h5>
    }
</div>