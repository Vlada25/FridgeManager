@model FridgeProductForUpdateDto

@{
    ViewData["Title"] = "Product in fridge";
}

<div>
    <h3>Update Product In Fridge</h3>

    <form class="creation-form" method="post" asp-action="UpdateProductInFridge">
        <div class="field-container">
            <label asp-for="Id"></label>
            <div>
                <input asp-for="Id"/>
                <span class="error-mes-span" asp-validation-for="Id"></span>
            </div>
        </div>

        <div class="field-container">
            <label asp-for="Quantity"></label>
            <div>
                <input asp-for="Quantity"/>
                <span class="error-mes-span" asp-validation-for="Quantity"></span>
            </div>
        </div>

        <div class="action-btn-container">
            <button class="action-btn" type="submit" onclick="alert('Creation request sent')">Update</button>
            <a class="back-btn" href="/Home/Index">Back</a>
        </div>
    </form>

    @if (ViewData["Message"] != null)
    {
        <h5>@ViewData["Message"]</h5>
    }
</div>