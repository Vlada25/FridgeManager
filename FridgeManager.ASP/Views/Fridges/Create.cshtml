@model FridgeForCreationDto

@{
    ViewData["Title"] = "Fridges";
}

<div>
    <h3>Fridge Creation</h3>
    <form class="creation-form" method="post" asp-action="Create">
        <div class="field-container">
            <label asp-for="Name"></label>
            <input asp-for="Name"/>
        </div>

        <div class="field-container">
            <label asp-for="OwnerName">Owner Name</label>
            <input asp-for="OwnerName"/>
        </div>

        <div class="field-container">
            <label asp-for="ModelId">Model Id</label>
            <input asp-for="ModelId"/>
        </div>

        <div class="action-btn-container">
            <button class="action-btn" type="submit" onclick="alert('Creation request sent')">Create</button>
            <a class="back-btn" href="/Home/Index">Back</a>
        </div>
    </form>
</div>