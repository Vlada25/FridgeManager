@model FridgeProductForCreationDto

@{
    ViewData["Title"] = "Putting product in fridge";
}

<div>
    <h3>Fridge Creation</h3>

    <form class="creation-form" method="post" asp-action="PutProductInFridge">
        <div class="field-container">
            <label asp-for="FridgeId">Fridge Id</label>
            <input asp-for="FridgeId"/>
        </div>

        <div class="field-container">
            <label asp-for="ProductId">Product Id</label>
            <input asp-for="ProductId"/>
        </div>

        <div class="field-container">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity"/>
        </div>

        <div class="action-btn-container">
            <button class="action-btn" type="submit" onclick="alert('Creation request sent')">Create</button>
            <a class="back-btn" href="/Home/Index">Back</a>
        </div>
    </form>

    @if (ViewData["Message"] != null)
    {
        <h5>@ViewData["Message"]</h5>
    }
</div>