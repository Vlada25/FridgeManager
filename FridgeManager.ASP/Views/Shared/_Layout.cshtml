<!DOCTYPE HTML>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/css/main.css" type="text/css"/>
    <link rel="stylesheet" href="~/css/tables.css" type="text/css"/>
    <link rel="stylesheet" href="~/css/forms.css" type="text/css"/>
    <link rel="stylesheet" href="~/css/buttons.css" type="text/css"/>
    <link rel="stylesheet" href="~/css/common.css" type="text/css"/>
    <link rel="stylesheet" href="~/css/containers.css" type="text/css"/>
</head>
<body style="margin: 0; background-color: #E3F2FF; font-family: sans-serif; color: #272773;">
    <header>
        <div class="header-container">
            <h2>Fridge Manager</h2>
            <a class="sign-out-btn" href="/Home/StartPage">Sign Out</a>
        </div>
    </header>

    <div id="main">
        @RenderBody()
    </div>
    
    <script>
        function confirmRemoving() {
            const isOk = confirm('Do you really want to delete the object?');
            if (!isOk) {
                document.querySelector('.del-text').textContent = '';
            } 
        }

        let signOutBtn = document.querySelector('.sign-out-btn');
        let backBtn = document.querySelector('.back-btn');
        let pathName = document.location.pathname;

        if (pathName == '/' || pathName == '/Accounts/Login' || pathName == '/Accounts/Register' || pathName == '/Home/StartPage') {
            signOutBtn.style.display = 'none';
            backBtn.style.right = '30px';
        }
        else {
            signOutBtn.style.display = 'block';
            backBtn.style.right = '160px';
        }
    </script>
</body>
</html>