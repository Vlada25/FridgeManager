@model List<Product>

@{
    ViewData["Title"] = "Products";
}

<div>
    <h3 class="h3-above-table">Products in fridges</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Default Quantity</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in @Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.DefaultQuantity</td>
                    <td><img src="@product.ImageSource" alt="" style="width: 100px; height: 100px"></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="back-btn" href="/Home/Index">Back</a>
</div>