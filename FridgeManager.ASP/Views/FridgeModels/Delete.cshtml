@{
    ViewData["Title"] = "Models";
}

<div>
    <h3>Removing Model</h3>

    <form class="getting-form" asp-action="Delete" method="post">
        <label>Model Id:</label>
        <input type="text" name="id"/>
        <br />
        <div class="action-btn-container">
            <button class="action-btn" type="submit" onclick="alert('Delete request sent')">Delete</button>
            <a class="back-btn" href="/Home/Index">Back</a>
        </div>
    </form> 
    
    @if (ViewData["Message"] != null)
    {
        <h5>@ViewData["Message"]</h5>
    }
</div>